@{
    ViewData["Title"] = "Login Page";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <title>Görev Takip Sistemi Giriş</title>
    <style>
        body {
            background-color: #2c3e50; /* Koyu mavi arka plan */
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
            flex-direction: column;
        }

        h1 {
            color: white;
            font-size: 2.5rem;
            margin-bottom: 20px;
            text-align: center;
        }

        .form-signin {
            max-width: 400px;
            width: 100%;
            padding: 40px;
            background-color: #ecf0f1;
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .form-group {
            margin-bottom: 1.5rem;
            width: 100%;
        }

            .form-group label {
                display: block;
                font-size: 1.25rem;
                color: black; /* Siyah yazı rengi */
                margin-bottom: 0.5rem;
            }

            .form-group input {
                width: 100%;
                height: 50px;
                font-size: 1.25rem;
                padding: 0 15px;
                border: 1px solid #ddd;
                border-radius: 5px;
                box-sizing: border-box;
            }

        .btn-primary {
            background-color: #2e8b57; /* Mavi tonunda buton */
            border: 1px solid #1e90ff;
            color: white;
            font-size: 1.25rem;
            padding: 10px;
            width: 100%;
            border-radius: 5px;
            cursor: pointer;
            text-align: center;
            margin-top: 10px;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #2c3e50; /* Daha koyu mavi hover efekti */
                border-color: #007acc;
            }

        .alert-danger {
            color: #721c24;
            background-color: #f8d7da;
            border-color: #f5c6cb;
            margin-top: 20px;
            font-size: 1rem;
            padding: 10px;
            border-radius: 5px;
            width: 100%;
            text-align: center;
            display: none; /* Başlangıçta gizli */
        }

        .logo {
            margin-bottom: 20px;
        }

            .logo img {
                width: 150px; /* Resim boyutu */
                height: auto;
                border-radius: 50%;
            }
    </style>
</head>
<body>

    <h1>Görev Takip Sistemi</h1>

    <div class="form-signin">
        <div class="logo">
            <img src="~/images/uludagenerji (1).png" alt="Logo" />
        </div>

        <div id="error-message" class="alert-danger"></div>

        <form id="login-form">
            <div class="form-group">
                <label for="kullaniciAd">Kullanıcı Adınız</label>
                <input type="text" id="kullaniciAd" name="kullaniciAd" required>
            </div>
            <div class="form-group">
                <label for="parola">Parola</label>
                <input type="password" id="parola" name="parola" required>
            </div>
            <button class="btn-primary" type="submit">Giriş</button>
        </form>
    </div>

    <script>
        document.getElementById('login-form').addEventListener('submit', async function(event) {
            event.preventDefault(); // Formun varsayılan gönderim davranışını durdur

            const kullaniciAd = document.getElementById('kullaniciAd').value;
            const parola = document.getElementById('parola').value;
            const errorMessage = document.getElementById('error-message');

            // Hata mesajını sıfırla
            errorMessage.style.display = 'none';
            errorMessage.textContent = '';

            const response = await fetch('https://localhost:7108/api/login/login', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    KullaniciAd: kullaniciAd,
                    Parola: parola
                })
            });

            const result = await response.json();

            if (response.ok) {
                // Başarılı giriş ve yönlendirme
                window.location.href = result.redirectUrl;
            } else {
                // Giriş başarısız ise hata mesajını göster
                errorMessage.style.display = 'block';
                errorMessage.textContent = result.message;
            }
        });
    </script>

</body>
</html>
